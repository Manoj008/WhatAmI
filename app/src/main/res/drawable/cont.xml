<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="40dp"/>
            <gradient android:angle="270" android:startColor="#8bc34a"
                android:endColor="#689f38"/>
            <corners android:radius="6dp"/>
            <stroke android:color="#5564dd17" android:width="1dp"/>
        </shape>
    </item>
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="40dp"/>
            <solid android:color="#64dd17"/>
            <gradient android:angle="270" android:startColor="#9964dd17"
                android:endColor="#689f38"/>
            <corners android:radius="6dp"/>
            <stroke android:color="#55ffffff" android:width="1dp"/>
        </shape>
    </item>
</layer-list>